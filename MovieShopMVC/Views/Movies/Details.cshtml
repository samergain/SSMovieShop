@model ApplicationCore.Models.MovieDetailsModel
@using ApplicationCore.Models;
@{
    var movieCard = new MovieCardModel();
    movieCard.Id = @Model.Id;
    movieCard.PosterUrl = @Model.PosterUrl;
    movieCard.Title = @Model.Title;
}

<div class="container-fluid">
    <div class="row bg-image" style="background-image: url(@Model.BackdropUrl);">
        <div class="col-5 border-0">
            <div class="card border-0" style="width: 80%;">
            <partial name="_MovieCardPartial" model="movieCard" />
            </div>
        </div>

        <div class="col-5">
            <div class="card border-0" style="width: 80%;  --bs-bg-opacity: 1;">
              <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class=" fs-6 mb-2 text-muted">@Model.Tagline @Model.Price</p>
                <p class="card-subtitle fs-6 mb-2 text-muted">@Model.RunTime | @Model.ReleaseDate.Value.Year</p>
                <h4><span class="badge bg-success">9.0</span></h4>
                <p class="card-text">@Model.Overview</p>
              </div>
            </div>
        </div>
        <div class="col-2">
            <div class="d-grid gap-2 mt-5">
              <button class="btn btn-light" type="button">Review</button>
              <button class="btn btn-dark" type="button">Buy @Model.Price</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h2>Movie Facts</h2></li>
              <li class="list-group-item">Release Date <span><button type="button" class="btn btn-secondary btn-sm" style="border-radius: 30px;">@Model.ReleaseDate.Value.Year</button></span></li>
              <li class="list-group-item">Run Time  <span><button type="button" class="btn btn-secondary btn-sm" style="border-radius: 30px;">@Model.RunTime</button></span></li>
              <li class="list-group-item">Box Office  <span><button type="button" class="btn btn-secondary btn-sm" style="border-radius: 30px;">@Model.Revenue</button></span></li>
              <li class="list-group-item">Budget  <span><button type="button" class="btn btn-secondary btn-sm" style="border-radius: 30px;">@Model.Budget</button></span></li>
              <li class="list-group-item"><a href="@Model.ImdbUrl"><span class="glyphicon glyphicon-share"></span></a></li>
              <li class="list-group-item"><h2>Trailers:</h2>
                <ul class="list-group">
                @foreach(var t in Model.Trailers)
                        {
                            <li class="list-group-item"><a href="@t.TrailerUrl" target="_blank">@t.Name</a></li>
                        }
                
                </ul>
              </li>
            </ul>
        </div>
        <div class="col-8">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><h2>Cast</h2></li>
              <ul class="list-group list-group-flush">
                @foreach(var t in Model.Casts)
                        {
                            <li class="list-group-item"><img class="rounded-circle" src="@t.ProfilePath" style="height:70px;"/>&nbsp;&nbsp; @t.Name</li>
                        }
                
                </ul>
            </ul>
        </div>
    </div>
</div>
